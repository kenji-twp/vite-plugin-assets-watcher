{
  "name": "vite-plugin-assets-watcher",
  "version": "0.0.1",
  "description": "Vite plugin to watch static assets",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenji-twp/vite-plugin-assets-watcher.git"
  },
  "keywords": [
    "vite plugin",
    "shopify",
    "copy"
  ],
  "author": "Kenji Shimizu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kenji-twp/vite-plugin-assets-watcher/issues"
  },
  "homepage": "https://github.com/kenji-twp/vite-plugin-assets-watcher#readme",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@parcel/watcher": "^2.3.0",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "micromatch": "^4.0.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.3",
    "@types/micromatch": "^4.0.4",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "vite": ">=4.0.0"
  },
  "packageManager": "npm@10.2.1"
}
